{
  "name": "frontend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "copy:html": "cp index.html dist/index.html",
   "dev": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build:ts": "tsc",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "build": "npm run build:ts && npm run build:css && npm run copy:html",
    "start": "npm run build && npx serve dist"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18"
  }
}
